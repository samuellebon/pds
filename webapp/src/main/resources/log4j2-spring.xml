<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%style{%d{HH:mm:ss}}{Bright, magenta} %highlight{%level}{FATAL=bg_red, ERROR=red, WARN=yellow, INFO=green, DEBUG=blue} %msg%n" />
        </Console>
    </Appenders>

    <Loggers>

        <Root level="info">
            <AppenderRef ref="Console" />
        </Root>

        <Logger name="kan10.service" level="debug"></Logger>

    </Loggers>

</Configuration>